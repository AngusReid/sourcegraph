{
  "variables": {
    "aws_access_key_id": "",
    "aws_secret_access_key": "",
    "region": "",
    "source_ami": ""
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key_id`}}",
    "secret_key": "{{user `aws_secret_access_key`}}",
    "region": "{{user `region`}}",
    "source_ami": "{{user `source_ami`}}",
    "instance_type": "m3.medium",
    "ssh_username": "ubuntu",
    "ami_name": "sourcegraph-base-image {{timestamp}}",
    "associate_public_ip_address": true,
    "ami_block_device_mappings": [{
      "device_name": "/dev/sda1",
      "volume_size": 64,
      "delete_on_termination": true
    }],
    "launch_block_device_mappings": [{
      "device_name": "/dev/sda1",
      "volume_size": 64,
      "delete_on_termination": true
    }]
  }],
  "provisioners": [
    {
      "type": "file",
      "source": "upload/",
      "destination": "."
    },
    {
      "type": "shell",
      "script": "scripts/ext_disk.sh"
    },
    {
      "type": "shell",
      "inline": [
        "sudo reboot",
        "sleep 30",
        "sudo resize2fs /dev/xvda1"
      ]
    },
    {
      "type": "file",
      "source": "../../conf/ca.cert.pem",
      "destination": "sourcegraph-internal-ca.crt"
    },
    {
      "type": "shell",
      "script": "scripts/base_image_setup.sh"
    }
  ]
}
